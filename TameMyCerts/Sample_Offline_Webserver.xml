    <SubjectRule>
      <Field>userPrincipalName</Field>
      <Mandatory>false</Mandatory>
      <MaxOccurrences>1</MaxOccurrences>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^[-_a-zA-Z0-9\.]*\@intra\.adcslabor\.de$</Expression>
