    </SubjectRule>
    <SubjectRule>
      <Field>rfc822Name</Field>
      <Mandatory>false</Mandatory>
      <MaxOccurrences>1</MaxOccurrences>
      <MaxLength>128</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^[-_a-zA-Z0-9\.]*\@adcslabor\.de$</Expression>
