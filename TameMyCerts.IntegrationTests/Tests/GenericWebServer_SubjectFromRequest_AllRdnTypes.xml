<CertificateRequestPolicy xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <MinimumKeyLength>2048</MinimumKeyLength>
  <MaximumKeyLength>3072</MaximumKeyLength>
  <ReadSubjectFromRequest>true</ReadSubjectFromRequest>
  <Subject>
    <SubjectRule>
      <Field>commonName</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^commonName$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>domainComponent</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^domainComponent$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>emailAddress</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^emailAddress$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>organizationName</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^organizationName$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>organizationalUnitName</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^organizationalUnitName$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>localityName</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^localityName$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>stateOrProvinceName</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^stateOrProvinceName$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>countryName</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>2</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^DE$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>title</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^title$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>givenName</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^givenName$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>initials</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^ABC$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>surname</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^surname$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>streetAddress</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^streetAddress$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>unstructuredName</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^unstructuredName$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>unstructuredAddress</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^unstructuredAddress$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
    <SubjectRule>
      <Field>serialNumber</Field>
      <Mandatory>true</Mandatory>
      <MaxLength>64</MaxLength>
      <Patterns>
        <Pattern>
          <Expression>^serialNumber$</Expression>
        </Pattern>
      </Patterns>
    </SubjectRule>
  </Subject>
</CertificateRequestPolicy>